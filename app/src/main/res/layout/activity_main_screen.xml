<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"



    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishal.silent.MainScreen">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:id="@+id/addButton"
        style="@style/Widget.AppCompat.Button"
        android:text="@string/addButton"
        android:textAlignment="gravity"

        android:textSize="75dp"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorAccent"
        android:elevation="11dp" />

    <Button
        android:text="Sync"
        android:layout_width="fill_parent"
        android:textSize="50dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:id="@+id/syncButton"
        android:layout_below="@+id/addButton"
        android:layout_alignLeft="@+id/addButton"
        android:layout_alignStart="@+id/addButton"
        android:textColor="#ffffff"
        android:backgroundTint="@color/colorAccent"
        style="@style/Widget.AppCompat.Button" />
<!--
    <Button
        android:text="Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/calendarButton"
        android:layout_below="@+id/syncButton"
        android:layout_alignLeft="@+id/syncButton"
        android:layout_alignStart="@+id/syncButton"
        android:backgroundTint="@android:color/holo_blue_light"
        style="@style/Widget.AppCompat.Button" />
        -->

</RelativeLayout>
